extends default

block content
    .container
        header 
            div 
                h1 YellFest
                p Louder wins
            button Start a fight
        main 
            p Hottest threads:
            each thread in threads 
                article
                    a(href="#")
                        h2 #{thread.title}
                    div 
                        p.stats Replies: #{thread.replyCount} | Upvotes: #{thread.upvotes} | Last Post: #{thread.lastActivity}
