extends default

block append head
    link(rel="stylesheet", type="text/css" href="css/home.css")

block header
    a(href="/new", class="cta-button") Start a fight

block content
    main 
        p Hottest fights:
        if !threads.length
            p.empty No fights
        else 
            each thread in threads 
                article
                    a(href="#")
                        h2 #{thread.title}
                    div 
                        p.stats Replies: #{thread.replyCount} | Upvotes: #{thread.upvotes} | Last Post: #{thread.lastActivity}
